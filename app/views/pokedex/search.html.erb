<h1>Search Results</h1>
<div>
  <p>
    Pokemon #
    <%= @pokemon['id'] %>
  </p>

  <h2>
    <%= @pokemon['name'] %>
  </h2>

  <div>
    <%= image_tag @pokemon['sprites']['front_default'] %>
  </div>

  <%= form_with model: Pokemon, url: pokemon_index_path do |form| %>
    <%= form.hidden_field :external_id, value: @pokemon['id'] %>
    <%= form.hidden_field :name, value: @pokemon['name'] %>
    <%= form.hidden_field :front_default_image, value: @pokemon['sprites']['front_default'] %>

    <%= form.submit "Catch This Pokemon" %>
  <% end %>
</div>
